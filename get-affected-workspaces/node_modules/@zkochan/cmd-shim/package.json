{
	"name": "@zkochan/cmd-shim",
	"version": "4.3.0",
	"description": "Used in pnpm for command line application support",
	"author": {
		"name": "Zoltan Kochan",
		"email": "zoltan.kochan@gmail.com",
		"url": "http://kochan.io"
	},
	"scripts": {
		"clean": "tsc --build --clean",
		"build": "tsc --build --verbose --listEmittedFiles",
		"test:unit": "jest",
		"test": "pnpm run build && standard && pnpm run test:unit && mos test",
		"md": "mos",
		"prepublishOnly": "pnpm run build"
	},
	"files": [
		"index.d.ts",
		"index.d.ts.map",
		"index.js",
		"index.js.map"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/pnpm/cmd-shim.git"
	},
	"license": "BSD-2-Clause",
	"dependencies": {
		"is-windows": "^1.0.2",
		"make-dir": "^3.0.0"
	},
	"devDependencies": {
		"@types/is-windows": "^0.2.0",
		"@types/node": "^12.7.2",
		"jest": "^25.1.0",
		"lodash": "^4.17.15",
		"memory-fs": "^0.4.1",
		"mock-fs": "^4.10.1",
		"mos": "^1.3.1",
		"mos-plugin-readme": "^1.0.4",
		"standard": "^14.0.2",
		"typescript": "^3.7.4"
	},
	"engines": {
		"node": ">=8.15"
	},
	"mos": {
		"plugins": [
			"readme"
		]
	},
	"standard": {
		"env": {
			"jest": true
		}
	},
	"jest": {
		"testEnvironment": "node"
	}
}
